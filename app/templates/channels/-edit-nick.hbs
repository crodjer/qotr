<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button {{ action "cancelNickEdit" }}
          type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Editing nick</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="nick-edit-input">Nick</label>
          {{ input id="nick-edit-input" class="form-control"
          placeholder="Your nickname"
          enter="nickSave" value=editingNickText }}
        </div>
        <div class="checkbox">
          <label>
            {{ input type="checkbox" checked=makeDefaultNick }}
            Make this my default nick
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <button {{ action "cancelNickEdit" }}
          type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
        <button {{ action "nickSave" }}
          type="button" class="btn btn-primary">Save changes
        </button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
